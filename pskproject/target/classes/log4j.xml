<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p: %c - %m%n" />
		</layout>
	</appender>
	 
	<!-- Application Loggers --> 
	<logger name="com.pension.client">
		<level value="info" />
	</logger>
	 	
	<logger name="com.pension.admin">
		<level value="info" />
	</logger>
	
	<logger name="com.pension.common">
		<level value="info" />
	</logger>
	 	
	
	<logger name="com.pension.client.review.dao">
		<level value="trace" />
	</logger>
	 
	<logger name="com.pension.client.reply.dao">
		<level value="trace" />
	</logger>
	
	<logger name="com.pension.client.qna.dao">
		<level value="trace" />
	</logger>
		
	<logger name="com.pension.admin.room.dao">
		<level value="trace" />
	</logger>

	<logger name="com.pension.client.reservation.dao">
		<level value="trace"/>
	</logger>

	<logger name="com.pension.admin.pay.dao">
		<level value="trace" /> 
	</logger>
	
	<logger name="com.pension.admin.price.dao">
		<level value="trace" />
	</logger>
	
	<logger name="com.pension.admin.notice.dao">
		<level value="trace" />
	</logger>
	
	<logger name="com.pension.admin.statistics.dao">
		<level value="trace" />
	</logger>
	
	<logger name="com.pension.admin.login.dao">
		<level value="trace" />
	</logger>
	
	<logger name="com.pension.admin.stock.dao">
      <level value="trace" />
   </logger>
   
   <logger name="com.pension.admin.employee.dao">
      <level value="trace" />
   </logger>
   
   <logger name="com.pension.admin.order.dao">
      <level value="trace" />
   </logger>
   
   <logger name="com.pension.admin.orderProduct.dao">
      <level value="trace" />
   </logger>
   
   <logger name="com.pension.admin.member.dao">
      <level value="trace" />
   </logger>
	
	<logger name="com.pension.client.member.dao">
		<level value="trace" />
	</logger>
	
	<logger name="com.pension.client.login.dao">
		<level value="trace" />
	</logger>	
	
	
	
	<!-- 3rdparty Loggers -->
	<logger name="org.springframework.core">
		<level value="info" />
	</logger>
	
	<logger name="org.springframework.beans">
		<level value="info" />
	</logger>
	
	<logger name="org.springframework.context">
		<level value="info" />
	</logger>

	<logger name="org.springframework.web">
		<level value="info" />
	</logger>

	<!-- Root Logger -->
	<root>
		<priority value="warn" />
		<appender-ref ref="console" />
	</root>
	

</log4j:configuration>
